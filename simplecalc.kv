<Button>:
    background_color: [0,0,0,1]

<Design>
	id:calculator
	spacing:10
	padding:10
	display: entry
	rows: 6
	
	
		
	BoxLayout:
		TextInput:
			id : entry
			multiline: False
	
	BoxLayout:
		Button:
			text:"+"
			on_press:  entry.text += self.text
		
		Button:
			text: "-"
			on_press:  entry.text += self.text
			
		Button:
			text: "/"
			on_press: entry.text += self.text
			
		Button:
			text: "*"
			on_press: entry.text += self.text
			
	BoxLayout:
		Button:
			text:"1"
			on_press:  entry.text += self.text
		
		Button:
			text: "2"
			on_press:  entry.text += self.text
			
		Button:
			text: "3"
			on_press: entry.text += self.text
			
		Button:
			text: "4"
			on_press: entry.text += self.text
			
	BoxLayout:
		Button:
			text: "5"
			on_press: entry.text += self.text
			
		Button:
			text: "6"
			on_press: entry.text += self.text
			
		Button:
			text: "7"
			on_press: entry.text += self.text
			
		Button:
			text: "8"
			on_press: entry.text += self.text
			
	BoxLayout:
		Button:
			text: "9"
			on_press:  entry.text += self.text
			
		Button:
			text: "0"
			on_press: entry.text += self.text
			
		Button:
			text: "."
			on_press: entry.text += self.text
			
		Button:
			text: "AC"
			on_press: entry.text = " "
		
	BoxLayout:
		Button:
			text: "="
			on_press: calculator.calculate(entry.text)
			
	
			
		